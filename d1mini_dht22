esphomeyaml:
  name: d1mini_dht22
  platform: ESP8266
  board: nodemcuv2

wifi:
  ssid: !secret wifi_ssid
  password: !secret wifi_password
  manual_ip:
    static_ip: !secret d1mini_dht22_ip
    gateway: !secret wifi_gateway
    subnet: !secret wifi_subnet
    dns1: !secret wifi_dns1
    dns2: !secret wifi_dns2

# Enable logging
logger:

# Enable Home Assistant API
api:
  password: !secret esphome_api_password

ota:
  password: !secret esphome_ota_password
  
## https://esphomelib.com/esphomeyaml/components/web_server.html
# web_server:
#   port: 80

## https://esphomelib.com/esphomeyaml/components/sensor/dht.html
## https://esphomelib.com/esphomeyaml/components/sensor/index.html#config-sensor
sensor:
  - platform: dht
    pin: D1 #GPIO5
    temperature:
      name: "D1Mini DHT22 Temperature"
      filters:
        - filter_nan:
        - heartbeat: 15s
        - sliding_window_moving_average:
            window_size: 2
            send_every: 2
            send_first_at: 1
        - lambda: return x * (9.0/5.0) + 32.0; # report temperature in Fahrenheit
      unit_of_measurement: "Â°F"
      # icon: "mdi:thermometer"   # temperature gets thermometer icon by default
      # accuracy_decimals: 1      # temperature gets 1 decimal by default
    humidity:
      name: "D1Mini DHT22 Humidity"
      filters:
        - filter_nan:
        - heartbeat: 15s
        - sliding_window_moving_average:
            window_size: 2
            send_every: 2
            send_first_at: 1
      # icon: "mdi:water-percent" # humidity gets water-percent icon by default
      accuracy_decimals: 1        # humidity gets 0 decimals by default
    model: AM2302                 # dht22 (attached board w/3 pins)
    update_interval: 10s
